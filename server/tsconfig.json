{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16", // Or "NodeNext" for latest Node features
    "moduleResolution": "Node16", // Matches module above
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true // Optional: strips comments in production build
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
